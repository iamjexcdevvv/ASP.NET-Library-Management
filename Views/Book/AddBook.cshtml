@using LibraryManagement.Models.Book
@model BookEntries

<section class="bg-primary h-[calc(100vh-64px)] flex items-center md:h-[calc(100vh-72px)]">
    <div class="relative overflow-auto card glass h-[90%] bg-primary mx-auto w-4/5">
        <div class="absolute w-full h-full flex flex-col px-6 pt-2">
            <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Add a new book</h2>
            <form asp-action="AddBook" method="post" class="flex flex-col flex-grow">
                <div class="grid gap-2 grid-cols-1 sm:grid-cols-2 flex-grow">
                    <div class="sm:col-span-2">
                        <label for="book-title" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Book Title</label>
                        <input asp-for="BookTitle" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type the book title here">
                        <div><span asp-validation-for="BookTitle" class="text-red-500 text-xs"></span></div>
                    </div>
                    <div class="w-full">
                        <label for="book-isbn" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Book ISBN</label>
                        <input asp-for="BookISBN" type="text" id="isbn" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type the book isbn number here">
                        <div><span asp-validation-for="BookISBN" class="text-red-500 text-xs"></span></div>
                    </div>
                    <div class="w-full">
                        <label for="book-author" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Book Author</label>
                        <input asp-for="BookAuthor" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type the book author here">
                        <div><span asp-validation-for="BookAuthor" class="text-red-500 text-xs"></span></div>
                    </div>
                    <div>
                        <label for="book-genre" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Book Genre</label>
                        <select asp-for="BookGenre" id="book-genre" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
                            <option disabled selected value="">Select category</option>
                            <option value="Romance">Romance</option>
                            <option value="Horror">Horror</option>
                            <option value="Finance">Finance</option>
                            <option value="Fantasy">Fantasy</option>
                        </select>
                        <div><span asp-validation-for="BookGenre" class="text-red-500 text-xs"></span></div>
                    </div>
                    <div class="w-full">
                        <label for="book-publisher" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Book Publisher</label>
                        <input asp-for="BookPublisher" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type the book publisher here">
                        <div><span asp-validation-for="BookPublisher" class="text-red-500 text-xs"></span></div>
                    </div>
                    <div>
                        <label for="published-date" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Published Date</label>
                        <input asp-for="BookPublishedDate" type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type the book published date here">
                        <div><span asp-validation-for="BookPublishedDate" class="text-red-500 text-xs"></span></div>
                    </div>
                    <div>
                        <label for="book-status" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Book Status</label>
                        <select asp-for="BookStatus" id="book-status" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
                            <option disabled selected value="">Select category</option>
                            <option value="true">Available</option>
                            <option value="false">Not available</option>
                        </select>
                        <div><span asp-validation-for="BookStatus" class="text-red-500 text-xs"></span></div>
                    </div>
                </div>
                <div class="mt-auto flex justify-start py-6">
                    <button type="submit" class="btn px-4 py-2 text-sm font-medium text-center text-white bg-primary rounded-lg focus:ring-4 focus:ring-primary-200 dark:focus:ring-primary-900 hover:bg-primary-800">
                        Add product
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>