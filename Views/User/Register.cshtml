@model RegisterViewModel

<section class="bg-primary dark:bg-gray-900 h-screen flex items-center">
  <div class="relative h-4/5 overflow-auto flex flex-col items-center justify-center mx-auto max-w-sm w-full md:max-w-md md:h-[90%] lg:overflow-hidden">
      <div class="absolute overflow-auto top-0 w-full card glass bg-primary rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
              <h1 class="text-xl font-bold leading-tight tracking-tight text-base-100 md:text-2xl dark:text-white">
                  Create your account
              </h1>
              <form class="space-y-4 md:space-y-6" asp-action="Register" method="post">
                  <div>
                      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email</label>
                      <input asp-for="Email" type="email" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                      <div><span asp-validation-for="Email" class="text-red-500 text-xs"></span></div>
                  </div>
                  <div>
                      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password</label>
                      <input asp-for="Password" type="password" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                      <div><span asp-validation-for="Password" class="text-red-500 text-xs"></span></div>
                  </div>
                  <div>
                      <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Confirm Password</label>
                      <input asp-for="ConfirmPassword" type="password" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                      <div><span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs"></span></div>
                  </div>
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                        <input asp-for="TermsAndConditionAgreement" aria-describedby="terms" type="checkbox" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-primary-600 dark:ring-offset-gray-800">
                    </div>
                    <div class="ml-3 text-sm">
                        <label for="terms" class="font-light text-neutral dark:text-gray-300">I accept the <a class="font-medium text-base-100 hover:underline dark:text-primary-500" href="#">Terms and Conditions</a></label>
                    </div>
                    <div><span asp-validation-for="TermsAndConditionAgreement" class="text-red-500 text-xs"></span></div>
                  </div>
                  <button type="submit" class="w-full cursor-grab text-white bg-primary hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Sign in</button>
                  <p class="text-sm font-light text-neutral dark:text-gray-400">
                      Already have an account? <a asp-controller="User" asp-action="Login" class="font-medium text-primary-600 hover:underline hover:text-base-100 dark:text-primary-500">Login here</a>
                  </p>
              </form>
          </div>
      </div>
  </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
